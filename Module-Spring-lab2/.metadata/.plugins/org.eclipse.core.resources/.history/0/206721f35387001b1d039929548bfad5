package com.cg.lab3.api;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.cg.lab3.Exception.MoviesException;
import com.cg.lab3.entity.Movies;
import com.cg.lab3.service.IMoviesService;

@RestController
@RequestMapping(path="/movies")
public class TraineeAPI {

	@Autowired
	private IMoviesService movieService;
	
	@GetMapping
	public ResponseEntity<List<Movies>> findAll(){
		return new ResponseEntity<>(movieService.findAll(),HttpStatus.OK);
	}
	
	@GetMapping("/{movieName:[a-z]{2,20}}")
	public ResponseEntity<Movies> findById(@PathVariable("movieName") String movieName){
		ResponseEntity<Movies> response=null;
		
		Movies movies=movieService.findById(movieName);
		
		if(movies==null) {
			response=new ResponseEntity<>(HttpStatus.NOT_FOUND);
		}else {
			response=new ResponseEntity<>(movies,HttpStatus.OK);
		}
		return response;
	}
	
	@GetMapping("/{category:[A-Z]{2,}}")
	public ResponseEntity<List<Movies>> findByCategory(@PathVariable("category") String category){
		ResponseEntity<List<Movies>> response=null;
		
		List<Movies> movies=movieService.findByCategory(category);
		
		if(movies==null) {
			response=new ResponseEntity<>(HttpStatus.NOT_FOUND);
		}else {
			response=new ResponseEntity<>(movies,HttpStatus.OK);
		}
		return response;
	}
	
	@DeleteMapping("/{movieName}")
	public ResponseEntity<Void> deleteMovie(@PathVariable("movieName") String movieName) {
		ResponseEntity<Void> response=null;
		Movies movie=movieService.findById(movieName);
		if(movie==null) {
			response = new ResponseEntity<>(HttpStatus.NOT_FOUND);
		}else {
			movieService.deleteById(movieName);
			response = new ResponseEntity<>(HttpStatus.OK);
		}
		return response;
	}
	
	@PutMapping
	public ResponseEntity<Movies> updateEmployee(@RequestBody Movies trainee) throws MoviesException{
		trainee = traineeService.save(trainee);
		return new ResponseEntity<>(trainee, HttpStatus.OK);
	}
	@PostMapping
	public ResponseEntity<Movies> createEmployee(@RequestBody Movies trainee) throws MoviesException {
		trainee=traineeService.add(trainee);
		return new ResponseEntity<>(trainee,HttpStatus.CREATED);
	}
}
