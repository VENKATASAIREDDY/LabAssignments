package com.cg.lab3.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.cg.lab3.Exception.MoviesException;
import com.cg.lab3.dao.IMoviesRepository;
import com.cg.lab3.entity.Movies;

@Service
public class MovieServiceImpl implements IMoviesService{

	@Autowired
	private IMoviesRepository moviesRepo;

	@Override
	public Movies add(Movies movies) throws MoviesException {
		if(movies!=null) {
			if(moviesRepo.existsById(movies.getMovieName())) {
				throw new MoviesException("Movie "+movies.getMovieName()+" is exists already ");
			}else {
				movies=moviesRepo.save(movies);
			}
		}
		return movies;
	}

	@Override
	public Movies save(Movies movies) throws MoviesException {
		Movies old=moviesRepo.findById(movies.getMovieName()).orElse(null);
		if(old == null) {
			throw new MoviesException("No Movie "+movies.getMovieName()+" is present");
		}else {
			movies=moviesRepo.save(movies);
		}
		return movies;
	}

	@Override
	public List<Movies> findAll() {
		return moviesRepo.findAll();
	}

	@Override
	public void deleteById(String movieName) {
		moviesRepo.deleteById(movieName);
		
	}

	@Override
	public Movies findById(String movieName) {
		return moviesRepo.findById(movieName).orElse(null);
	}

	@Override
	public Movies findByCategory(String category) {
		return moviesRepo.findByCategory(category);
	}
	
	
}
