<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="com.cg.sl1.beans.Employee2" id="employee2">
		<property value="12345" name="employeeId"/>
		<property value="Harriet" name="employeeName"/>
		<property value="40000.0" name="salary"/>
		<property name ="businessUnit" ref="sbu2"/>
		<property value="30" name="age"/>
	</bean>

	<bean class="com.cg.sl1.beans.SBU2" id="sbu2">
		<property value="PES-BU" name="sbuID"/>
		<property value="Product Engineer Services" name="sbuName"/>
		<property value="Kiran Rao" name="sbuHead"/>
	</bean>

</beans>